# Additional tags will be added here at the end to ensure previous filtering based on tags will not be affected
#
{% if logstash_post_tagging is defined %}
filter {
{%   for item in logstash_post_tagging %}
  if [type] == "{{ item.type }}" {
    mutate {
      add_tag => [
{%     for tag in item.tags %}
        "{{ tag }}"
{%       if not loop.last %},
{%       endif %}
      ]
{%     endfor %}
    }
  }
{%   endfor %}
{% endif %}
}
